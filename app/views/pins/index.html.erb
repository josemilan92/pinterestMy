<p id="notice"><%= notice %></p>

<div class="grid">
 <h1>Pins</h1>
  <% @pins.each do |pin| %>
<div class="grid-item" style="width: 20%">
  <div class="thumbnail">
    <%= pin.name %>
    <%=link_to image_tag( pin.photo, :class => 'img-responsive'), pin %>
    <%= pin.description %>
   </div>
</div>
    <% end %>
<br>

</div>

<script type="text/javascript">
    var elem = document.querySelector('.grid');
    var msnry = new Masonry( elem, {
        // options
        itemSelector: '.grid-item',
        columnWidth: 200
    });
$(window).load(function(){
    var elem = document.querySelector('.grid');
    var msnry = new Masonry( elem, {
        // options
        itemSelector: '.grid-item',
        columnWidth: 200
    });
})
</script>