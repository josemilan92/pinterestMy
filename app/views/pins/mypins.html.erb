<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Mis pins</h1>
  <% @pins.each do |pin| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= pin.name %>
          <%=link_to image_tag( pin.photo, :class => 'img-responsive'), pin %>
          <%= pin.description %>
          <div class="buttons", style="margin-top:10px; margin-bottom:10px ">

            <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn' %>
            <% if user_signed_in? %>
                <%= link_to 'Destroy', pin, :method=> :delete, data: { confirm: 'Estas seguro?' }, :class => 'btn'  %>
            <% end %>
          </div>

        </div>
      </div>

  <% end %>
  <br>
  <%= link_to 'New Pin', new_pin_path, :class=>'btn' %>
</div>
